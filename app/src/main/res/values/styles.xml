<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textViewStyle">@style/App.TextView</item>
    </style>

    <!-- Standard TextView -->
    <style name="App.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">?attr/textColorHighEmphasis</item>
    </style>

    <!-- Popup Menu Themes -->
    <style name="App.PopupMenu" parent="ThemeOverlay.AppCompat.Light" />
    <style name="App.PopupMenu.Dark" parent="ThemeOverlay.AppCompat.Dark" />

    <!-- Modern & Focused Blue Theme (Light) -->
    <style name="AppTheme.ModernBlue" parent="AppTheme">
        <item name="mainBackgroundColor">@color/primary_background_blue</item>
        <item name="surfaceColor">@color/surface_input_field_blue</item>
        <item name="primaryAccentColor">@color/primary_accent_blue</item>
        <item name="textColorHighEmphasis">@color/text_high_emphasis_blue</item>
        <item name="textColorMediumEmphasis">@color/text_medium_emphasis_blue</item>
        <item name="destructiveActionColor">@color/destructive_action_blue</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">?attr/surfaceColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!-- Sleek & Vibrant Teal Theme (Dark) -->
    <style name="AppTheme.SleekTeal" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textViewStyle">@style/App.TextView</item>

        <item name="mainBackgroundColor">@color/primary_background_teal</item>
        <item name="surfaceColor">@color/surface_input_field_teal</item>
        <item name="primaryAccentColor">@color/primary_accent_teal</item>
        <item name="textColorHighEmphasis">@color/text_high_emphasis_teal</item>
        <item name="textColorMediumEmphasis">@color/text_medium_emphasis_teal</item>
        <item name="destructiveActionColor">@color/destructive_action_teal</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">?attr/mainBackgroundColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

</resources>