<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Soft frosted glass background (subtle translucency) -->
    <solid android:color="@android:color/transparent"/>
    <!-- Smooth gradient overlay for depth -->
    <gradient
        android:type="linear"
        android:angle="135"
        android:startColor="#33FFFFFF"
        android:endColor="#11FFFFFF"/>

    <!-- Accent border for identity -->
    <stroke
        android:width="1.5dp"
        android:color="@color/chat_bubble_stroke_color"/>
    <!-- Directional corner shape -->
    <corners
        android:topLeftRadius="4dp"
        android:topRightRadius="18dp"
        android:bottomRightRadius="18dp"
        android:bottomLeftRadius="18dp"/>

    <!-- Comfortable padding -->
    <padding
        android:left="14dp"
        android:top="8dp"
        android:right="14dp"
        android:bottom="8dp"/>
</shape>
